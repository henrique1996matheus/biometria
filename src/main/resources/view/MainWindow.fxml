<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
   prefHeight="550.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25"
   xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="com.unip.controller.MainWindowController">
   <children>
      <HBox alignment="BOTTOM_LEFT" prefHeight="59.0" prefWidth="900.0" spacing="5.0"
         style="-fx-padding: 0 15 0 15;">
         <children>
            <!-- Botões à esquerda -->
            <Button fx:id="properties_btn" mnemonicParsing="false"
               onMouseClicked="#open_properties_pane" prefHeight="30.0"
               style="-fx-background-radius: 0 0 -2 -2;" text="Propriedades Rurais">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>

            <Button fx:id="users_btn" mnemonicParsing="false" onMouseClicked="#open_users_pane"
               prefHeight="30.0" style="-fx-background-radius: 0 0 -2 -2;" text="Usuários">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>

            <Button fx:id="add_user_btn" mnemonicParsing="false"
               onMouseClicked="#open_add_users_pane" prefHeight="30.0"
               style="-fx-background-radius: 0 0 -2 -2;" text="Cadastrar usuário">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>

            <Button fx:id="add_property_btn" mnemonicParsing="false"
               onMouseClicked="#openAddProperty" prefHeight="30.0"
               style="-fx-background-radius: 0 0 -2 -2;" text="Cadastrar Propriedade">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>

            <!-- Region que empurra o botão "Sair" para a direita -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Botão Sair -->
            <Button fx:id="logout_btn" mnemonicParsing="false" onMouseClicked="#logout"
               prefHeight="30.0" style="-fx-background-radius: 0 0 -2 -2;" text="Sair">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>

      <StackPane fx:id="stc_pane_pages" prefHeight="521.0" prefWidth="900.0">
         <children>
            <VBox fx:id="properties_infos" prefHeight="200.0" prefWidth="100.0"
               style="-fx-background-color: blue;" visible="false">
               <children>
                  <TableView fx:id="properties_table" prefHeight="517.0" prefWidth="900.0">
                     <columns>
                        <TableColumn fx:id="tbl_col_owner" minWidth="75.0" text="Proprietário" />
                        <TableColumn fx:id="tbl_col_address" minWidth="75.0" text="Endereço" />
                        <TableColumn fx:id="tbl_col_fisc_date" minWidth="125.0" prefWidth="-1.0"
                           text="Data de Fiscalização" />
                        <TableColumn fx:id="tb_col_acoes_properties" text="Ações" />
                     </columns>
                  </TableView>
               </children>

               <StackPane.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </StackPane.margin>
            </VBox>

            <VBox fx:id="users_info" prefHeight="200.0" prefWidth="100.0" visible="false">
               <children>
                  <TableView fx:id="users_table" prefHeight="517.0" prefWidth="900.0">
                     <columns>
                        <TableColumn fx:id="tb_col_username" minWidth="75.0" prefWidth="-1.0"
                           text="Nome" />
                        <TableColumn fx:id="tb_col_email" minWidth="50.0" prefWidth="-1.0"
                           text="E-mail" />
                        <TableColumn fx:id="tb_col_level_access" minWidth="100.0" prefWidth="-1.0"
                           text="Nível de Acesso" />
                        <TableColumn fx:id="tb_col_acoes" text="Ações" />
                     </columns>

                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </TableView>
               </children>
            </VBox>

            <VBox fx:id="add_users" alignment="CENTER" onMouseClicked="#register_user"
               prefHeight="200.0" prefWidth="100.0">
               <children>


                  <ImageView fx:id="camera_view" fitHeight="338.0" fitWidth="868.0"
                     pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" />
                     </VBox.margin>
                  </ImageView>

                  <Button fx:id="btnLigarCamera" mnemonicParsing="false"
                     onMouseClicked="#toggle_camera" text="Ligar Câmera"
                     style="-fx-background-radius: 10;">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Button>

                  <Button fx:id="btn_register_user" mnemonicParsing="false"
                     onMouseClicked="#register_user" style="-fx-background-radius: 10;"
                     text="Cadastrar novo rosto">
                  </Button>
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</VBox>